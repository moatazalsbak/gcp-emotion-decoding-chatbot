# GCP Emotion Decoding Chatbot - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# Google Cloud Platform Configuration
# ============================================

# Your GCP Project ID
GCP_PROJECT_ID=your-gcp-project-id

# GCP Region (default: us-central1)
GCP_LOCATION=us-central1

# Google Application Credentials Path
# Path to your service account JSON key file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# ============================================
# Google Cloud Storage Configuration
# ============================================

# GCS Bucket Name for storing assets
GCS_BUCKET_NAME=emotion-chatbot-assets

# ============================================
# Vertex AI Configuration
# ============================================

# Vertex AI Model Name
# Options: gemini-pro-vision, gemini-pro, etc.
VERTEX_MODEL=gemini-pro-vision

# Model Temperature (0.0 - 1.0)
MODEL_TEMPERATURE=0.7

# Maximum Tokens
MAX_OUTPUT_TOKENS=2048

# ============================================
# Flask Application Configuration
# ============================================

# Flask Environment (development, production)
FLASK_ENV=development

# Flask Debug Mode (True/False)
FLASK_DEBUG=True

# Application Port
PORT=8080

# Secret Key for Flask sessions
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================
# Logging Configuration
# ============================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Format
LOG_FORMAT=json

# ============================================
# API Configuration
# ============================================

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=60

# Maximum File Upload Size (MB)
MAX_UPLOAD_SIZE_MB=10

# ============================================
# CORS Configuration
# ============================================

# Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# Optional: Authentication
# ============================================

# Enable Authentication (True/False)
ENABLE_AUTH=False

# API Key for authentication
API_KEY=your-api-key-here

# ============================================
# Optional: Cloud Run Configuration
# ============================================

# Cloud Run Service Name
SERVICE_NAME=emotion-chatbot

# Cloud Run Region
CLOUD_RUN_REGION=us-central1

# ============================================
# Optional: Monitoring and Observability
# ============================================

# Enable Cloud Monitoring
ENABLE_MONITORING=True

# Enable Cloud Trace
ENABLE_TRACE=True

# Enable Cloud Profiler
ENABLE_PROFILER=False
